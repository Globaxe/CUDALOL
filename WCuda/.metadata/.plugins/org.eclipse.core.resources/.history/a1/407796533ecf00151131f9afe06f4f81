#ifndef GRID_H_
#define GRID_H_

#include "cuda_runtime.h"
#include <iostream>

using std::ostream;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

class Grid
    {
	/*--------------------------------------*\
	 |*		Constructor		*|
	 \*-------------------------------------*/


    public:

	Grid(dim3 dg = dim3(1, 1, 1), dim3 db = dim3(1, 1, 1));

	/*--------------------------------------*\
 |*		Methodes		*|
	 \*-------------------------------------*/

    public :

	int threadCounts() const;

	int blockCounts() const;

	int threadByBlock() const;

	/*--------------------------------------*\
	 |*		Attributs		*|
	 \*-------------------------------------*/

    public:

	dim3 dg;
	dim3 db;
    };

ostream& operator<<(ostream& stream, const Grid& grid);

#endif 

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
