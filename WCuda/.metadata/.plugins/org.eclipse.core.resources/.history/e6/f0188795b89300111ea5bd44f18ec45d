#ifndef ImageCapture_H_
#define ImageCapture_H_

#include <string>

#include "cv.h"
#include "highgui.h"
#include "cudaTools.h"

using namespace cv;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

class ImageCapture
    {
	/*--------------------------------------*\
	|*		Constructor		*|
	 \*-------------------------------------*/

    public:

	ImageCapture(const string& videoName);
	ImageCapture(int idCamera);
	virtual ~ImageCapture(void);

	/*--------------------------------------*\
	|*		Methodes		*|
	 \*-------------------------------------*/

    public:

	int getW(void);
	int getH(void);

	bool opened(void);
	uchar4* capture(void);

    protected:

    private:

	void buildCommon();
	static uchar4* castToUChar4(uchar* ptrTab);

	/*--------------------------------------*\
	|*		Attributs		*|
	 \*-------------------------------------*/

    private:

	float w;
	int h;

	VideoCapture captureStream;

    };

#endif

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/
