/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

class WorkGPUStream
    {
	/*--------------------------------------*\
	|*		Constructor		*|
	 \*-------------------------------------*/

    public:

	WorkGPUStream(uchar4* ptrImage1,uchar4* ptrImage2,int w,int h);
	virtual ~WorkGPUStream(void);

	/*--------------------------------------*\
	|*		Methodes		*|
	 \*-------------------------------------*/

    public:

	void run(void);


    private:

	int sizeOctets(void);

	void copyImageOnDevice0(void);
	void modifyImageOnDevice0(void);
	void copyImageFromDevice0(void);



	/*--------------------------------------*\
	|*		Attributs		*|
	 \*-------------------------------------*/

    private:

	uchar4* ptrImage1;
	uchar4* ptrImage2;

