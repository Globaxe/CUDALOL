/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useVideo(void)
    {
    int idCamera = 0;
    VideoCapture capture(idCamera);
    if (capture.isOpened())
	{

	Mat matCapture;
	while (true)
	    {
	    capture >> matCapture;
	    work(matCapture);
	    }
	}
    else
	{
	cerr << "Camera Capture : failed : camera = " << idCamera << endl;
	return false;
	}

    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

void work(const Mat& matCapture)
    {

    }

