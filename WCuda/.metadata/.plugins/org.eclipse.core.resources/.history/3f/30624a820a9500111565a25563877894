#include "Indice2D.h"
#include "cudaTools.h"
#include "Device.h"

#define FACTOR19 1/9

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

 __global__ void toFlou(uchar4* ptrDev1_image, int w, int h);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

static __device__ void modifyColor(int pixelI, int pixelJ, uchar4* ptrDev1_image, uchar4& color,int w);

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

__global__ void toFlou(uchar4* ptrDev1_image, int w, int h)
    {
    int tid = Indice2D::tid();
    int nbThread = Indice2D::nbThread();

    uchar4 color;
    color.w = 255; // alpha

    int pixelI;
    int pixelJ;

    while(tid < w * h)
	{
	Indice2D::pixelIJ(tid, w, pixelI, pixelJ);

	color=ptrDev1_image[tid];
	modifyColor(pixelI, pixelJ, ptrDev1_image,color,w);
	ptrDev1_image[tid] = color;

	tid += nbThread;
	}
    }

__device__ void modifyColor(int pixelI, int pixelJ, uchar4* ptrDev1_image, uchar4& color,int w)
    {
    int up=pixelI+w;
    int down=pixelI-w;

    unsigned char levelGray = (int)(ptrDev1_image[tid].x+ptrDev1_image[tid-1].x+ptrDev1_image[tid+1].x+ptrDev1_image[up].x+ptrDev1_image[down].x+ptrDev1_image[up-1].x+ptrDev1_image[up+1].x+ptrDev1_image[down-1].x+ptrDev1_image[down+1].x+)*FACTOR19;

    color.x = levelGray;
    color.y = levelGray;
    color.z = levelGray;
    }

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

