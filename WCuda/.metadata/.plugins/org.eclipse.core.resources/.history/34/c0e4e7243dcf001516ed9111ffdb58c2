Animable_I<uchar4>* VagueProvider::createAnimable()
    {
    float dt = 2*PI/1000;

    int dw = 16 * 60 *2 ; // =32*30=960
    int dh = 16 * 60; // =32*30=960

    return new Vague(dw, dh, dt);
    }

 Image_I* VagueProvider::createImageGL(void)
     {
     ColorRGB_01 colorRGB(0,1,0); // Green
     return new ImageAnimable_RGBA_uchar4(createAnimable(),colorRGB);
     }

