void  WorkGPU::run(void)
    {
    copyImageOnDevice0();
    modifyImageOnDevice0();
    copyImageFromDevice0();
    }

int WorkGPU::sizeOctets(void)
    {
    return w*h*sizeof(uchar4);
    }

