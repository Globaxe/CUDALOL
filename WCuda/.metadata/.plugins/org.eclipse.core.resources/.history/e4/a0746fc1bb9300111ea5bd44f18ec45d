/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

ImageViever::ImageViever(const string& idWindow):chrono()
    {
    this->idWindow=idWindow;
    namedWindow(idWindow, 1);
    compteur=0;
    }

ImageViever::~ImageViever(void)
    {
    // rien
    }

void ImageViever::update(Mat matCapture)
    {
    imshow(idWindow, matCapture);
    compteur++;
    }

int ImageViever::fps(void)
    {
   double delay=chrono.timeElapse();
   int fps =1/delay*compteur;

   if (delay>2)
       {
       chrono.stop();
    compteur=0;
    chrono.start();
       }

    return fps;
    }

